<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsApp.PageSetUpUser" Title="Назад">

    <TableView  Intent="Settings" VerticalOptions="Start"
                   Margin="10, 0,0,0">
        <TableRoot >
            <TableSection Title="Содиржимое ленты новостей" TextColor="Black">
                <SwitchCell x:Name="fig" Text="Фото" OnChanged="SwitchCell_OnChanged" Height="48"/>
                <SwitchCell Text="Краткое описание"  x:Name="opis" OnChanged="opis_OnChanged" Height="48"/>
                <SwitchCell Text="Исходное представление статьи"  x:Name="MyWeb" OnChanged="MyWeb_OnChanged" Height="48"/>
            </TableSection>
            <TableSection Title="Информация о погоде" TextColor="Black">
                <SwitchCell x:Name="gps" Text="Прогноз погоды" OnChanged="Gps_OnChanged" On="True" Height="48"/>
           
                
               
            </TableSection>
        </TableRoot>
    </TableView>

</ContentPage>